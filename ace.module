/**
 * Implements hook_library().
 * Auto-generates library entries for all ace plugins.
 */
function ace_library() {
  return array(
    'ace' => array(
      'version' => 'master',
      'js' => array(
        libraries_get_path('ace-builds') . '/src/ace.js' => array(),
        drupal_get_path('module', 'ace') . '/ace.js' => array(),
      ),
